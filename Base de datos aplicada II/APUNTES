—CREAR USUARIOS
CREATE USER BDY1102_2 IDENTIFIED BY “APLICADA_P2.practica_2”
DEFAULT TABLESPACE “DATA”
TEMPORARY TABLESPACE “TEMP”;
ALTER USER BDY1102_2 QUOTA UNLIMITED ON DATA;

GRANT CREATE SESSION TO BDY1102_2, BDY1102_3;
GRANT “RESOURCE” TO todos los user;

ALTER USER BDY1102_2 DEFAULT ROLE “RESOURCE”;
lo mismo con todos los usuarios


—PRVILEGIOS USUARIOS
GRANT CREATE VIEW TO BDY1102_5;
GRANT CREATE MATERIALIZED VIEW TO BDY1102_6;


—CREAR ROL
CREATE ROLE ROLNAME;

— PRIVILEGIOS ROL
GRANT CREATE PROCEDURE TO ROLNAME;
GRANT CREATE TRIGGER TO ROLNAME;
GRANT CREATE INDEXTYPE TO ROLNAME;

—- ASIGNAR ROL A USUARIOS
GRANT ROLNAME TO BDY1102_1, BDY1102_2;

— ASIGNAR CONSULTAS A TABLAS ESPECIFICAS 
GRANT SELECT ON CLIENTE TO ROLNAME;
GRANT SELECT ON SUCURSAL TO ROLNAME;
—Insertar,actualizar y eliminar

GRANT SELECT, UPDATE, DELETE ON BDY1102_1.CLIENTE TO BDY1102_3;



